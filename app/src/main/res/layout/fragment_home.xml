<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discover.fragments.HomeFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/main_header"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/tv_tunisia"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/tunisia" />

                <RelativeLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:alpha="0.7"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_annotation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_date"
                    android:fontFamily="sans-serif"
                    android:paddingTop="0dp"
                    android:layout_marginTop="-2dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/tv_temp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/_013_snowing_1"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="fill"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="16"
                                android:id="@+id/tv_temp_c"
                                android:textColor="@color/white"
                                android:layout_marginRight="4dp"
                                android:textSize="65sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Â°C"
                                android:textColor="@color/white"
                                android:paddingTop="20dp"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>



                    <TextView
                        android:id="@+id/tv_cloud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Partially couldy Partially couldy "
                        android:textColor="@color/white"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_pin"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_date"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/pin"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_region_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_date"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/iv_pin"
                    android:fontFamily="sans-serif-black"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_region_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_region_name"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_pin"
                    android:fontFamily="sans-serif-medium"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_a_la_une"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_header"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/la_une"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_a_la_une"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_header"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/tv_mon_sejour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_incontournables"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/mon_s_jour"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_sejour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mon_sejour"
                android:layout_marginStart="16dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/tv_incontournables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_a_la_une"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/les_incontournables"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_incontournables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_incontournables"
                android:nestedScrollingEnabled="false" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
