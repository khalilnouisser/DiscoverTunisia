<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/all_layout"
    tools:context=".login.fragment.LoginFragment">

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="45dp"
            android:src="@drawable/inspring_logo"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/shape_blue_light_border_5dp"
            android:hint="@string/email"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColorHint="@color/colorPrimaryLight"
            tools:ignore="Autofill,RtlSymmetry,TextFields" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/shape_blue_light_border_5dp"
            android:hint="@string/hiden_password"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:inputType="textPassword"
            android:paddingBottom="8dp"
            android:textColorHint="@color/colorPrimaryLight"
            tools:ignore="Autofill,RtlSymmetry,TextFields" />

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="45dp"
            android:gravity="right"
            android:text="@string/forget_yout_password"
            android:textColor="@color/colorPrimaryLight"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_sigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/shape_second_color_border_5dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/sign_in"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layout_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/shape_blue_color_border_5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/fb"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/continue_with_facebook"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp">

            <LinearLayout
                android:id="@+id/layout_select_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/shape_blue_light_border_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/langues"
                    android:id="@+id/tv_langue"
                    android:textColor="@color/colorPrimaryLight" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/arrow_bottom"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textAlignment="viewEnd"
                android:layout_toEndOf="@+id/layout_select_language"
                android:gravity="end"
                android:text="@string/register_account"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryLight"
            tools:ignore="RelativeOverlap" />

    </LinearLayout>

    <com.discover.tunisia.discover.Ui.CustomViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    </com.discover.tunisia.discover.Ui.CustomViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabDots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="10dp"
        app:tabPaddingStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        app:tabGravity="center"
        app:tabIndicator="@null"
        app:tabBackground="@drawable/tab_selector"
         />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:visibility="gone" />
</RelativeLayout>